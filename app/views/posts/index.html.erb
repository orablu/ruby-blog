<h1>Posts</h1>

<% @posts.each do |post| %>
    <div class="postDiv">
        <div class="postTitle"><%= post.title %></div>
        <div class="postText"><%= post.text %></div>
        <div class="postLinks">
            <%= link_to 'show', post %>
            <%= link_to 'edit', edit_post_path(post) %>
            <%= link_to 'delete', post_path(post), method: :delete, data: { confirm: 'Are you certain?' } %>
        </div>
    </div>
<% end %>

<%= link_to "Add a post", new_post_path %>
