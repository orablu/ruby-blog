<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation" class="formErrors">
            <div class="formErrorCount"><%= pluralize(@post.errors.count, "error") %></div>
            <% @post.errors.full_messages.each do |msg| %>
                <div class="formError"><%= msg %></div>
            <% end %>
        </div>
    <% end %>
    <div class="blogTitle">
        <div class="formLabel"><%= f.label :title %></div>
        <div class="formInput"><%= f.text_field :title %></div>
    </div>
    <div class="blogText">
        <div class="formLabel"><%= f.label :text %></div>
        <div class="formInput"><%= f.text_area :text %></div>
    </div>
    <div class="submit">
        <%= f.submit %>
    </div>
<% end %>
